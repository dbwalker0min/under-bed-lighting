{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ESPHome: Compile",
      "type": "shell",
      "command": "uvx esphome compile devices/under_bed_lighting.yaml",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "ESPHome: Upload (OTA)",
      "type": "shell",
      "problemMatcher": [],
      "command": "uvx esphome upload devices/under_bed_lighting.yaml",
    },
    {
      "label": "ESPHome: Logs",
      "type": "shell",
      "problemMatcher": [],
      "command": "uvx esphome logs devices/under_bed_lighting.yaml"
    },
    {
      "label": "ESPHome: Upload (USB)",
      "type": "shell",
      "problemMatcher": [],
      "command": "uvx esphome upload devices/under_bed_lighting.yaml --device ${input:serial_port}",
    }
  ],
  "inputs": [
    {
      "id": "serial_port",
      "type": "promptString",
      "description": "Enter the serial port (e.g., COM3 or /dev/ttyUSB0):",
      "default": ""
    }
  ],
} 